<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.neumont.csc150.view.MemoryGameView"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="MemoryGameView.css">
    <top>
        <MenuBar>
            <Menu text="Game">
                <MenuItem text="Main Menu" onAction="#onExit"/>
                <MenuItem text="Save" onAction="#onSave"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#onAbout"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <HBox>
            <GridPane fx:id="board" styleClass="board">
            </GridPane>

        </HBox>
    </center>

</BorderPane>
